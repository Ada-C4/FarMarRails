<img src="http://www.littlerock.com/!UserFiles/business-listings/attractions/Farmers'%20Market.jpg" alt="farmers market" class="home-pg-image">

<h1 class="home-pg-header">Welcome to FarMar</h1>
<div class="button-container">
  <%= button_to "I am a market", "/markets", method: :get, class: "home-pg-button", params:{user_type: 'market'} %>
  <%= button_to "I am a vendor", "/vendors", method: :get, class: "home-pg-button", params:{user_type: 'vendor'} %>
  <%= button_to "I am a guest", "/markets", method: :get, class: "home-pg-button", params:{user_type: 'guest'} %>
</div>


<p>
  All Markets
</p>
<ul>
  <% @markets.each do |market| %>
    <li><%= link_to market.name, market %></li>
  <% end %>
</ul>
