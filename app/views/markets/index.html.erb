<h1>All dem Markets</h1>

<%= button_to 'New', {action: 'new', controller: 'markets'}, method: :get %>

<table>
  <% @markets.each do |market| %>
  <tr>
    <td><%= link_to market.name, market %></td>
    <td><%= button_to 'Edit', {action: "edit", controller: 'markets', id: market.id}, {method: :get}  %></td>
  </tr>
  <% end %>
</table>