<div class="container">
  <h1>ALL OF THEM MARKETS</h1>
  <table class="table table-hover">
    <tr >
      <th>
        MARKET
      </th>
      <th>
        STATE
      </th>
      <th>
        MORE INFO
      </th>
    </tr>
    <% @markets.each do |market| %>
      <tr>
        <td>
          <%= market.name %>
        </td>
        <td>
          <%= market.state %>
        </td>
       <td>
         <%= link_to "Show Market", "/markets/#{market.id}", class: "btn btn-default" %>
       </td>
     </tr>
    <% end %>
  </table>
</div>
