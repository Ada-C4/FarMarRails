<h1 class="pg-header">Every Farmer's Market</h1>


  <% if @buttons %>
  <div class='three_button_nav'>
    <%= link_to 'A-Z', markets_path(order: 'az'), class: 'nav_button' %>
    <%= link_to 'New', new_market_path, class: 'nav_button' %>
    <%= link_to 'Z-A', markets_path(order: 'za'), class: 'nav_button' %>
    </div>
<br><br>
  <div class='table_list'>
    <table>
      <% @markets.each do |market| %>
      <tr>
        <td><%= link_to market.name, market, class: "market-link"%></td>
        <td><%= button_to 'Edit', edit_market_path(id: market.id), method: :get, class: 'table_button' %></td>
      </tr>
      <% end %>
    </table>
  </div>
  <% end %>


<% if !@buttons %>
<div class='two_button_nav'>
  <%= link_to 'A-Z', markets_path(order: 'az'), class: 'nav_button' %>
  <%= link_to 'Z-A', markets_path(order: 'za'), class: 'nav_button' %>
  </div>
  <div class='table_list'>
    <table>
      <% @markets.each do |market| %>
      <tr>
        <td class="guest_table"><%= link_to market.name, market, class: "market-link" %></td>
      </tr>
      <% end %>
    </table>
  </div>
<% end %>


