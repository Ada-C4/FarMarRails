<h1 class='pg-header'><%= @market.name %></h1>
<p class='description'>
  <%= @market.address %> | <%= @market.city%> | <%= @market.county %> county | <%= @market.state %> | <%= @market.zip %>
</p>

<h2 class="pg-sub-header">Who's sellin' stuff here?</h2>

<% if @is_guest %>
<table>
  <% @market.vendors.each do |vendor| %>
    <tr>
      <td><%= vendor.name %></td>
    </tr>
  <% end %>
</table>
<% end %>

<% if @is_vendor %>
  <table>
    <% @market.vendors.each do |vendor| %>
      <tr>
        <td><%= link_to vendor.name, market_vendor_path(market_id: vendor.market_id, id: vendor.id ) %></td>
      </tr>
    <% end %>
  </table>
<% end %>

<% if @is_market %>
  <table>
    <% @market.vendors.each do |vendor| %>
    <tr>
      <td><%= vendor.name %></td>
      <td><%= button_to 'Edit', edit_market_vendor_path(market_id: vendor.market_id, id: vendor.id), method: :get, class: 'table_button' %></td>
      <td><%= button_to 'Delete', market_vendor_path(market_id:vendor.market_id, id: vendor.id), method: :delete, class: 'table_button' %></td>
    </tr>
    <% end %>
  </table>
  <%= button_to 'Create a Vendor', new_market_vendor_path(market_id: @market.id), method: :get %>
<% end %>



<%= button_to 'Return to Markets', markets_path, method: :get %>
