<% if @is_market %>
<div class="container">
  <h1><%= @market.name %></h1>
    <div>
      <strong>Address:</strong> <%= @market.address %> <%= @market.city %>, <%= @market.state %> <%= @market.zip %>
      <%= button_to "Delete This Market", "/markets/#{@market.id}", method: :delete, class: "btn btn-default", data: { confirm: "Are you sure you want to delete this market?"} %>
      <%= button_to "Edit This Market", "/markets/#{@market.id}/edit", class: "btn btn-default" %>
    </div>
    <div>
      <h3>Vendors</h3>
      <%= button_to "Add a Vendor", "/vendors/new", class: "btn btn-default" %>
      <table class="table table-hover">
        <% @market.vendors.each do |vendor| %>
          <tr>
            <td>
              <%= link_to "#{vendor.name}", "/vendors/#{vendor.id}" %>
            </td>
         </tr>
        <% end %>
      </table>
    </div>
<%= link_to "Go back to list of markets", "/markets/", class: "btn btn-default" %>
</div>

