<h1> <%= @market.name %></h1>

<p><%= @market.address %></p>
<p><%= @market.city %></p>
<p><%= @market.state %></p>
<p><%= @market.county %></p>
<p><%= @market.zip %></p>

<h2>Vendors</h2>
<p>
<%= link_to "Create a Vendor", new_market_vendor_path(market_id: @market.id) %>
</p>
<table class="table">
  <tr>
    <th>
      Name
    </th>
    <th>
      Number of Employees
    </th>
  </tr>
  <% @vendors.each do |vendor| %>
    <tr>
      <td>
        <%= link_to "#{vendor.name}", market_vendor_path(id: vendor.id, market_id: @market.id) %>
      </td>
      <td>
        <%= vendor.num_employees %>
      </td>
      <td>
        <%= link_to 'Edit', edit_market_vendor_path(id: vendor.id, market_id: @market.id) %>
      </td>
      <td>
        <%= link_to "Delete",  { :controller=>"vendors", action: :destroy, :id => vendor.id, :market_id => @market.id }, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>
