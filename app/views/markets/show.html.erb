<h1><%= @market.name %></h1>
<br>
<h2><%= @market.address%></h2>
<h2><%= @market.city%>, <%= @market.state%></h2>
<h2><%= @market.county%> county</h2>
<h2><%= @market.zip%></h2>

<h3>Vendors at <%= @market.name %></h3>
<%= link_to "Create new Vendor!", new_market_vendor_path(@market) %>
<br>
<br>
<table>
  <% @vendors.each do |v| %>
    <tr>
      <td>
        <%= v.name %>
      </td>
      <td>
        <%= button_to "Edit", edit_market_vendor_path(market_id: v.market_id, id: v.id), method: :get %>
      </td>
      <td>
        <%= button_to "Delete", "/markets/#{v.market_id}/vendors/#{v.id}", method: "delete", data: { confirm: "Are you sure you want to delete this vendor?" } %>
      </td>
    </tr>
  <% end %>
</table>
