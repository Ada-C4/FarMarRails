<% provide(:title, "View Vendor's Products") %>
<%= render 'vendors/vendor_header' %>
<p>
  <% @products.each do |product| %>
    <%= product.name %> <%= button_to "Delete Me", vendor_product_path(@vendor_id,product.id), method: :delete, data: { confirm: "Are you sure you want to delete this product?" } , class: 'x-button' %>
    <br />
  <% end %>
</p>
