<%= form_for @product, url: @url_path, :html => {:class => "form-inline"} do |f| %>
  <fieldset>
    <legend><%= legend_text %></legend>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :vendor_id %>
    <%= f.text_field :vendor_id %>
    <%= f.submit value: "#{button_text}", class: "new_button"%>
  </fieldset>
<% end %>
