<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @product, url: @url_path, :html => {:class => "form-group"} do |f| %>
      <fieldset>
        <legend><%= legend_text %></legend>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', :required => true  %>
        <br>
        <%= f.submit value: "#{button_text}", class: "btn btn-primary" %>
      </fieldset>
    <% end %>
  </div>
</div>
