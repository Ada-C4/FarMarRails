<div>
  <%= form_for @product, url: {action: "update"} do |f| %>
    <fieldset>
      <legend>Edit a product:</legend>
      <%=f.label :name %>
      <%=f.text_field :name %>
      <br><br>
    </fieldset>
    <br>
    <%= f.submit("Save Changes") %>
  <% end %>
  <%= link_to "Go back to vendor", vendor_path(params[:vendor_id]) %>
</div>
