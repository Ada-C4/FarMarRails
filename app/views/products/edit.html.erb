<h1>Edit Product</h1>

<section>
  <%= form_for @product do |f| %>
    <fieldset>
      <legend>Edit Market</legend>
      <%= f.label :name %>
      <%= f.text_field :name %><br>
      <%= f.hidden_field :product_id, :value => params[:id] %>
      <br>
      <%= f.submit %>
    </fieldset>
  <% end %>
</section>
