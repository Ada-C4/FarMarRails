<div class="container">
  <%= form_for @product, url: {action: "create"} do |f| %>
    <fieldset>
      <legend>Add a product:</legend>
      <%=f.label :name %>
      <%=f.text_field :name %>
      <br><br>
    </fieldset>
    <br>
    <%= f.submit("Add Product!") %>
  <% end %>
  <%= link_to "Go back to vendor", vendor_path(params[:vendor_id]) %>
</div>
