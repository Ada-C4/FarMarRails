<h1>Create a new sale</h1>
<fieldset>
  <%= form_for @sale, url: {action: :create} do |f| %>
  <%= f.label :amount, "Amount $" %>
  <%= f.number_field :amount, :value => 0, :min => 0, :step => 0.01 %>
  <%= f.hidden_field :product_id, value: params[:product_id] %>
  <%= f.hidden_field :vendor_id, value: params[:vendor_id] %>
  <%= f.hidden_field :purchase_time, value: Time.now %>
  <%= f.submit %>

  <% end %>
</fieldset>
