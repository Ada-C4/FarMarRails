<section>
<%= form_for @new_vendor_sale, url: {action: "create"} do |f| %>
  <fieldset>
    <legend>New Sale</legend>
    <div>
      <%= f.label :product, "Product: "%>
      <%= f.collection_select(:product_id, @vendor.products, :id, :name) %>
    </div>
    <div>
      <%= f.label :amount, "Amount: $"%>
      <%= f.number_field :amount, :value => 0, :min => 0, :step => 0.01 %>
    </div>
    <div>
      <%= f.submit %>
    </div>
  </fieldset>
<% end %>
</section>
