<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @sale, url: @url_path, :html => {:class => "form-group"} do |f| %>
      <fieldset>
        <legend><%= legend_text %></legend>
        <h3>Product: <%= Product.find(params[:id]).name %> </h3>
        <%= f.label :amount, "Amount of sale (in pennies)" %>
        <%= f.number_field :amount, class: 'form-control' %>
        <br>
        <!-- <%= f.label :purchase_time %>
        <%= f.datetime_field :purchase_time, class: 'form-control' %>
        <br> -->
        <%= f.submit value: "#{button_text}", class: "btn btn-primary" %>
      </fieldset>
    <% end %>
  </div>
</div>
