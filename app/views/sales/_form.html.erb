<%= form_for @sale, url:({action: @action}) do |f|%>

<legend> New Sale </legend>
  <%= f.label :amount %>
  <%= f.number_field :amount, :step => 0.01 %><br>

  <%= f.collection_select(:product_id, @options, :id, :name, prompt: "Select the Product:") %>

  <%= f.submit class: "submit", class: "btn btn-default" %>


<% end %>
