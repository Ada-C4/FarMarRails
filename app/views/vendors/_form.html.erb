<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @vendor, :html => {:class => "form-group"} do |f| %>
      <fieldset>
        <legend><%= legend_text %></legend>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.label :no_employees %>
        <%= f.text_field :no_employees, class: 'form-control' %>
        <%= f.label :market_id %>
        <%= f.collection_select(:market_id, Market.all, :id, :name, {class: 'form-control'}) %>
        <br>
        <%= f.submit value: "#{button_text}", class: "btn btn-primary" %>
      </fieldset>
    <% end %>
  </div>
</div>
