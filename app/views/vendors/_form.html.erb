<h1> <%= @title %> </h1>

<%= form_for @vendor do |f| %>
  <%= f.label :vendor_name %>:
  <%= f.text_field :name %>
	<br>
  <%= f.label :number_of_employees %>:
  <%= f.text_field :no_employees  %>
	<br>
	<%= f.label :market_id, "Located at:" %> <br>
		<%= f.collection_select :market_id, Market.order(:name), :id, :name %>
	
  <%= @vendor.persisted? ? (f.submit value: "Update Vendor", id: 'special-button') : (f.submit value: "Add Vendor", id: 'special-button') %>
<% end %>

