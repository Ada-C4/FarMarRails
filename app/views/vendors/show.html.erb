<h1> <%= @vendor.name %> details </h1>

<p> You can find me at <%= @vendor.market.name %></p>
<p> Number of employees: <%= @vendor.employees %></p>

<h3> My sales</h3>

<ul>
<% @sales.each do |sale| %>
  <li>
    <%= number_to_currency(sale.amount/100) %> on <%= sale.purchase_time.strftime("%m-%d-%Y") %>
  </li>
<% end %>
</ul>

<h3>Total sales</h3>
<%= number_to_currency(@total_sales) %>

<h3>sales this month</h3>
<% @sales_this_month.each do |sale| %>
  <li>
    <%= number_to_currency(sale.amount/100) %> on <%= sale.purchase_time.strftime("%m-%d-%Y") %>
  </li>
<% end %>
</ul>

<h3>Total sales this month</h3>
<%= number_to_currency(@total_sales_this_month) %>


<h3> My products </h3>
<h4>Create, edit, or delete a product</h4>
<ul>
  <%= link_to "create", new_vendor_product_path(params[:id]) %>
  <% @products.each do |product| %>
    <li><%=link_to product.name, vendor_product_path(product.vendor_id, product.id) %>
      <%= link_to "edit", edit_vendor_product_path(product.vendor_id, product.id), method: :get %>
      <%= link_to "delete", vendor_product_path(product.vendor_id, product.id), method: :delete %>
    </li>
  <% end %>

</ul>
