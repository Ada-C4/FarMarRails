<% if @is_vendor %>
<div>
  <h1><%= @vendor.name %></h1>
  <h3>Stats:</h3>
  <p>
    <strong>Address:</strong> <%= @market.address %> <%= @market.city %>, <%= @market.state %> <%= @market.zip %>  </p>
  <p>
    Number of Employees: <%= @vendor.employee_no %>
  </p>
  <h2><%= link_to "#{@vendor.name} Sales Information", "/vendors/#{@vendor.id}/sales", class: "sales"%></h2>

  <%= link_to "Delete Vendor", "/vendors/#{@vendor.id}", method: :delete, class: "btn btn-default", data: { confirm: "Are you sure you want to delete this #{@vendor.id}?"} %>
  <%= link_to "Edit Vendor", "/vendors/#{@vendor.id}/edit", class: "btn btn-default" %>

  <h2>All Products Sold</h2>
  <%= link_to "Add a Product", "/vendors/#{@vendor.id}/products/new" %>
  <table class="table table-hover">
    <% @vendor.products.each do |product| %>
      <tr>
        <td>
          <%= product.name %>
        </td>
        <td>
          <%= link_to "Edit Product", edit_vendor_product_path(vendor_id: @vendor.id, id: product.id) %>
        </td>
      </tr>
    <% end %>
  </table>

  <%= link_to "Go back to list of vendors", "/vendors/", class: "btn btn-default" %>
  <%= link_to "Go back to list of markets", markets_path, class: "btn btn-default" %>
</div>

<% end %>
